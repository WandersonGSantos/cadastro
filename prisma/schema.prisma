generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  last_name String
  email     String   @unique()
  phone     String
  cpf       String   @unique()
  address   Address?
}

model Address {
  id           Int    @id @default(autoincrement())
  zip_code     String
  city         String
  state        String
  street       String
  neighborhood String
  number       String
  complement   String
  user         User   @relation(fields: [userId], references: [id])
  userId       Int    @unique
}
